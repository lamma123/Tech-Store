@page
@model SE1726_NET_SWP391_Group5.Pages.Admin.ProfileModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link rel="stylesheet" href="~/css/styleprofile.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="div_h">
    <h3>Profile Customer</h3>
</div>
<div class="div_account_profile">
    <form method="post">
        <div class="col-md-9">
            <div class="tab-content">
                <div class="tab-pane fade active show" id="account-general">
                    <div class="card-body media align-items-center">
                        <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt
                             class="d-block ui-w-80">
                        <div class="media-body ml-4">
                            <label class="btn btn-outline-primary">
                                Upload new photo
                                <input type="file" class="account-settings-fileinput">
                            </label> &nbsp;
                            <button type="button" class="btn btn-default md-btn-flat">Reset</button>
                            <div class="text-light small mt-1">Allowed JPG, GIF or PNG. Max size of 800K</div>
                        </div>
                    </div>
                    <hr class="border-light m-0">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">Name</label>
                            <input type="text" asp-for="account.Customer.Name" class="form-control" /><br />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Phone</label>
                            <input type="text" asp-for="account.Customer.Phone" class="form-control" /><br />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Address</label>
                            <input type="text" asp-for="account.Customer.Address" class="form-control" /><br />
                        </div>
                        <div class="form-group">
                            <label class="form-label">City</label>
                            <input type="text" asp-for="account.Customer.City" class="form-control" /><br />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Country</label>
                            <input type="text" asp-for="account.Customer.Country" class="form-control" /><br />
                        </div>
                        <div class="form-group">
                            <label class="form-label">New password</label>
                            <input type="password" asp-for="account.Password" class="form-control" /><br />
                        </div>
                    </div>
                </div>
            </div>
            <div class="div_h">
                <input type="submit" class="btn btn-success" value="Edit Information" />
            </div>
            <span style="margin-left:50px; color: red" class="msg-error">@ViewData["fail"]</span><br />
            <span style="margin-left:50px; color: green" class="msg-success">@ViewData["success"]</span><br />
        </div>
    </form>
</div>

