@page
@model SE1726_NET_SWP391_Group5.Pages.PostController.GuestPostModel

<h1 style="text-align:center">Post</h1>
<style>
    .post-info {
        margin-bottom: 10px; /* Khoảng cách dưới mỗi dòng */

    }

    .published-date {
        font-size: 16px; /* Đặt kích thước phông chữ */
        font-weight: bold; /* Đặt độ đậm cho phông chữ */
        margin-right: 10px; /* Khoảng cách bên phải của dấu chấm lửng */
        text-decoration: none; /* Loại bỏ gạch chân */
    }

    .published-date:hover {
        text-decoration: underline; /* Thêm gạch chân khi trỏ vào */
    }

    .post-title {
        text-decoration: none; /* Loại bỏ gạch chân */
    }

    .post-title:hover {
        text-decoration: underline; /* Thêm gạch chân khi trỏ vào */
    }


    /* Bảng dữ liệu */
.table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
}

/* Giao diện cho các thẻ <th> và <td> */
.table th, .table td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
}

/* Định dạng các thẻ <th> */
.table th {
    background-color: #f2f2f2;
}

/* Định dạng mỗi dòng chẵn trong bảng */
.table tbody tr:nth-child(even) {
    background-color: #f9f9f9;
}

/* Định dạng khi di chuột qua một dòng */
.table tbody tr:hover {
    background-color: #e0e0e0;
}

/* Định dạng cho các liên kết trong bảng */
.table a {
    text-decoration: none;
    color: #007bff;
}

/* Định dạng cho nút khi di chuột qua */
.table a:hover {
    text-decoration: underline;
}
</style>
<table class="table">
    <tbody>
        @foreach (var post in Model.Posts)
        {
            <tr>
                <td>
                    <div class="post-info">
                        <a asp-page="./DetailPost" asp-route-id="@post.PostId">
                            <span class="published-date post-title">@post.PublishedDate : @post.PostTitle</span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</tbody>
</table>